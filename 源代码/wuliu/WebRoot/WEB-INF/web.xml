    <filter-name>attachmentFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>org.bs.servlet.backend.LoginFilter</filter-class>
    <init-param>
      <param-name>urlPattern</param-name>
      <param-value>.jsp,Servlet</param-value>
    </init-param>
    <init-param>
      <param-name>escape</param-name>
      <param-value>login.jsp,regist.jsp,LoginServlet,BaseServlet,UserServlet,MemberServlet,add_member_success.jsp,add_member.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/backend/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>index</filter-name>
    <filter-class>org.bs.servlet.backend.IndexFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>index</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>org.bs.servlet.backend.UserServlet</servlet-class>
  </servlet>
  <servlet>

    <servlet-class>org.bs.servlet.backend.CheckCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InitBeanFactoryServlet</servlet-name>
    <servlet-class>org.bs.servlet.backend.InitBeanFactoryServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
